{% extends "AppBundle::layout.html.twig" %}
{% block body%}
	<div class="container-fluid">
		<div class="row">
			{#<div class="col-md-12">
				<div class="card card-stats" style="margin: 15px 0;">
					<div class="card-header " data-background-color="green">
						<i class="material-icons">tv</i>
					</div>
					<div class="card-content trailer-body">
						<h4 class="title">سریال جدید </b></h4>
						<div class="tab-moivie">
							<a href="#" class="btn btn-tab-movie-active"><i class="material-icons">add</i> اضافه کردن </a>
							<a href="#" class="btn btn-tab-movie"><i class="material-icons">recent_actors</i> عوامل سازنده </a>
							<a href="#" class="btn btn-tab-movie"><i class="material-icons">movie_filter</i> پیشنمایش </a>
							<a href="#" class="btn btn-tab-movie"><i class="material-icons">dynamic_feed</i> فصل ها </a>
							<a href="#" class="btn btn-tab-movie"><i class="material-icons">comment</i> نظرات </a>
