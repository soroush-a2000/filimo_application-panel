{% extends "AppBundle::layout.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row">
       <div class="col-sm-offset-2 col-md-8">
            <div class="card">
                <div class="card-header card-header-icon" data-background-color="rose">
                    <i class="material-icons">theaters</i>
                </div>
                <div class="card-content">
                    <h4 class="card-title">پکیج اشتراک جدید</h4>
                    <br>
                    {{form_start(form)}}
                    <form method="#" action="#">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">عنوان پکیج</label>
                            {{form_widget(form.title,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.title)}}</span>
                        </div>
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">مدت زمان پکیج (روز)</label>
                            {{form_widget(form.days,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.days)}}</span>
                        </div>
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">کلید SKU (در صورت استفاده)</label>
                            {{form_widget(form.skukey,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.skukey)}}</span>
                        </div>
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">قیمت اصلی به تومان</label>
                            {{form_widget(form.price,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.price)}}</span>
                        </div>
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">قیمت با تخفیف به تومان (اختیاری)</label>
                            {{form_widget(form.priceoff,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.priceoff)}}</span>
                        </div>
                        <div class="">
                            <label>
                                {{ form_widget(form.enabled) }} فعال / غیر فعال
                            </label>
                        </div>
                        <span class="pull-right"><a href="{{path("app_package_index")}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_forward</i> لغو</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock%}