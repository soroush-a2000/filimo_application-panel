{% extends "AppBundle::layout.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row">
       <div class="col-sm-offset-2 col-md-8">
            <div class="card">
                <div class="card-header card-header-icon" data-background-color="rose">
                    <i class="material-icons">apps</i>
                </div>
                <div class="card-content">
                    <h4 class="card-title">نسخه جدید</h4>
                    {{form_start(form)}}
                    <form method="#" action="#">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">عنوان نسخه</label>
                            {{form_widget(form.title,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.title)}}</span>
                        </div>
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">ویژگی های جدید</label>
                            {{form_widget(form.features,{"attr":{"class":"form-control",'rows':12}})}}
                            <span class="validate-input">{{form_errors(form.features)}}</span>
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">کد نسخه</label>
                            <br>
                            {{form_widget(form.code,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.code)}}</span>
                        </div>
                        <br>
                        <div class="form-group label-floating is-empty">
                            <label>
                                {{form_widget(form.cleardata)}}داده های اپلیکیشن پاک شوند‌؟
                            </label>
                        </div>
                        <div class="form-group label-floating is-empty">
                              <label>
                                {{form_widget(form.enabled)}}    فعال باشد؟
                              </label>
                        </div>
                        <br>
                        <span class="pull-right"><a href="{{path("app_version_index")}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_forward</i> لغو</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock%}